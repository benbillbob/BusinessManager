<UserControl x:Class="BusinessManager.Controls.LabeledCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 mc:Ignorable="d"
			 d:DesignWidth="300" 
			 xmlns:local="clr-namespace:BusinessManager.Controls">
	<DockPanel>
		<Label Content="{Binding Label, RelativeSource={RelativeSource AncestorType={x:Type local:LabeledCheckBox}}}" />
		<CheckBox IsChecked="{Binding Value, RelativeSource={RelativeSource AncestorType={x:Type local:LabeledCheckBox}}}" />
	</DockPanel>
</UserControl>
