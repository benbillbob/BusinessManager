<UserControl x:Class="BusinessManager.Controls.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:BusinessManager.Controls">
	<StackPanel Orientation="Horizontal">
		<Label Content="{Binding Label, RelativeSource={RelativeSource AncestorType={x:Type local:LabeledTextBox}}}" />
		<TextBox Text="{Binding Value, RelativeSource={RelativeSource AncestorType={x:Type local:LabeledTextBox}}}" />
	</StackPanel>
</UserControl>
